@model Post
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment _webHost

@{
    string filePath = System.IO.Path.Combine(_webHost.WebRootPath, Model.Image.TrimStart('~', '/'));
    if (!System.IO.File.Exists(filePath))
    {
        Model.Image = "Images/default.png";
    }


}
<div class="row justify-content-center">
    <h3>Delete Post</h3>
    <p>Do you want to delete this post?</p>
    <div class="card mt-3">
        <div class="card-header">
            Post - @Model.Id
        </div>
        <div class="card-body">
            <img src="~/@Model.Image" alt="img" class="w-25" />
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Content</p>
            @* <a asp-controller="" asp-action="" class="btn btn-primary">Add Comment</a> *@
            @* <a asp-controller="Posts" asp-action="Index" class="btn btn-secondary"> Back to List</a> *@
        </div>
    </div>
</div>


<form asp-action="Delete" method="post" class="text-center my-3">
    <input type="hidden" asp-for="Id" /> 
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>