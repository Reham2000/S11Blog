@model Post
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div class="card">
    <div class="card-header">
        Post - @Model.Id
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Content</p>
        <a asp-controller="" asp-action="" class="btn btn-primary">Add Comment</a>
        <a asp-controller="Posts" asp-action="Index" class="btn btn-secondary"> Back to List</a>
    </div>
</div>